{
  "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ES2017",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "Node",
    "sourceMap": false,
    "declaration": false,
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "jsx": "react"
  },
  "include": [
    "./*.ts",
    "./*.tsx",
    "./*.js"
  ],
  "exclude": [
    "node_modules",
    "*.js"
  ]
}
